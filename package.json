{
  "name": "cocobu",
  "version": "0.1.0",
  "private": true,
  "description": "CocoBu 叩叩簿 - A same source, different views expense tracking system",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "db:generate": "cd packages/database && npm run generate",
    "db:migrate:dev": "cd packages/database && npm run migrate:dev",
    "db:migrate:deploy": "cd packages/database && npm run migrate:deploy",
    "db:reset": "cd packages/database && npm run reset",
    "db:seed": "cd packages/database && npm run seed"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
